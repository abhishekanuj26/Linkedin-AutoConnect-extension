{
    "name": "My extension",
    "version": "1",
    "manifest_version" :   3,
    "description" : "Create connection request for linkedin",
    "action":{
        "default_popup":"popup.html"
    },
    "permissions":[
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["https://*.linkedin.com/*"],
    "content_scripts": [
        {
          "matches": ["https://*.linkedin.com/search/results/people/*"],
        "js": ["myscripts.js"]
        }
      ]
}